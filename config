# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym ccedilla resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        #status_command py3status -c ~/.i3/i3status.conf
        status_command i3status -c ~/.i3/i3status.conf 
	#status_command i3blocks #-c ~/.i3/i3blocks.conf

        font pango: System San Francisco Display 10, FontAwesome 9 
}

# Mouse control
mode "mouse control" {
  bindsym w exec xdotool mousemove_relative -- 0 -10 
  bindsym a exec xdotool mousemove_relative -- -10 0 
  bindsym s exec xdotool mousemove_relative -- 0 10 
  bindsym d exec xdotool mousemove_relative -- 10 0 

  bindsym Shift+w exec xdotool mousemove_relative -- 0 -50 
  bindsym Shift+a exec xdotool mousemove_relative -- -50 0 
  bindsym Shift+s exec xdotool mousemove_relative -- 0 50 
  bindsym Shift+d exec xdotool mousemove_relative -- 50 0 

  bindsym o exec xdotool click 1
  bindsym p exec xdotool click 3 
  bindsym k exec xdotool click 4 
  bindsym m exec xdotool click 5 

  bindsym Escape mode "default" 
}

bindsym $mod+m mode "mouse control"

bindsym $mod+F9 exec --no-startup-id ~/.i3/bin/spotify-controller play
bindsym $mod+Next exec --no-startup-id ~/.i3/bin/spotify-controller next
bindsym $mod+Prior exec --no-startup-id ~/.i3/bin/spotify-controller prev
bindsym $mod+Shift+F9 exec --no-startup-id killall spotify
bindsym $mod+Mod1+F9 exec --no-startup-id spotify
bindsym $mod+Shift+F10 exec --no-startup-id killall slack 

mode "move workspace" {
  bindsym Down move workspace to down
  bindsym Up move workspace to up
  bindsym Left move workspace to left
  bindsym Right move workspace to right

  bindsym h  move workspace to output left
  bindsym j  move workspace to output down
  bindsym k  move workspace to output up
  bindsym l  move workspace to output right

  bindsym Escape mode "default"
}
bindsym $mod+Shift+w mode "move workspace"
bindsym $mod+Shift+x  move workspace to output right

bindsym $mod+Escape exec --no-startup-id ~/.i3/bin/i3lock

#Monitor control
mode "monitor control" {
  bindsym s         exec xrandr --output edp-1 --primary --auto --output DP-1 --off --output HDMI-1 --off
  bindsym d         exec xrandr --output edp-1 --primary --auto --output DP-1 --off  --output HDMI-1 --auto --left-of eDP-1
  bindsym c         exec xrandr --output DP-1 --auto --output HDMI-1 --off --output eDP-1 --primary --auto --right-of DP-1
  bindsym Escape mode "default"
}

bindsym $mod+n mode "monitor control"

bindsym $mod+t exec --no-startup-id ~/.i3/bin/toggleTouchScreen.sh

exec_always ~/.i3/bin/i3init
